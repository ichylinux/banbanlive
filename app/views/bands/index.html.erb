<div class="actions">
  <%= link_to '追加', new_band_path %>
</div>

<table>
  <tr>
    <th><%= Band.human_attribute_name :name %></th>
    <th colspan="2"></th>
  </tr>
  
  <% @bands.each do |b| %>
    <tr>
      <td><%= b.name %></td>
      <td>
        <%= link_to '編集', edit_band_path(b) %>
      </td>
      <td>
        <%= link_to '削除', band_path(b), :method => 'delete', :confirm => '削除します。よろしいですか？' %>
      </td>
    </tr>
  <% end %>
</table>
